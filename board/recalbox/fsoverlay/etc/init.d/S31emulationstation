#!/bin/sh
#
#

log=/root/recalbox.log
essetting=/recalbox/scripts/essetting.sh

case "$1" in
  start)
	echo "starting emulationstation" >> $log
	command="HOME=/root SDL_VIDEO_GL_DRIVER=/usr/lib/libGLESv2.so SDL_NOMOUSE=1 /usr/bin/emulationstation"
	echo "Starting emulationstation with command : " >> $log
	echo "$command" >> $log
	eval $command &
	;;
  stop)
	killall emulationstation
	;;
  restart|reload)
        "$0" stop
        "$0" start
	;;
  *)
	echo "Usage: $0 {start|stop|restart}"
	exit 1
esac

exit $?


